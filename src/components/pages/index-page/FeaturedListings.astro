---
import ListingCard from "./ListingCard.astro";
import { HeadingLeftAligned } from "../../common";
import { getFeaturedListings } from "../../../listings";
import { useI18n } from "../../../i18n";

const { p } = useI18n(Astro);
// Mock data - this can be replaced with a content collection later
const featuredListings = await getFeaturedListings("hu");
---

<section class="py-20 bg-cream-soft">
  <div class="container mx-auto px-6 lg:px-12">
    <HeadingLeftAligned
      title="Kiemelt ingatlanjaink"
      titleColor="text-navy"
      descriptionColor="text-charcoal"
      subtitle="A Selling Debrecen ajánlata"
      description="Fedezze fel válogatott ingatlanjaink különleges kínálatát. Minden ingatlan gondosan kiválasztott, hogy az Ön igényeinek megfelelő otthont találhassa meg Debrecenben."
    />

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-10 lg:gap-x-12 gap-y-8 lg:gap-y-10"
    >
      {featuredListings.map((listing) => <ListingCard listing={listing} />)}
    </div>

    <div class="mt-16 text-center">
      <a
        href={p("properties")}
        class="inline-block px-8 py-4 bg-navy text-cream font-system-ui text-base tracking-wide uppercase border-2 border-navy hover:bg-transparent hover:text-navy transition-colors duration-700"
      >
        Összes ingatlan megtekintése
      </a>
    </div>
  </div>
</section>
