---
import { Image } from "astro:assets";
import { HeadingCentered, Prose } from "../../common";
import { useI18n } from "../../../i18n";
import data from "../../../content/fixed-pages/home.json";
import Assets from "../../../util/assets";
import Contact from "../../../util/contact";

const { lang, p } = useI18n(Astro);
const localizedData = data[lang as keyof typeof data];
---

<section class="py-20 lg:py-24 border-t border-camel/30 bg-cream-soft">
  <div class="container mx-auto px-6 lg:px-12">
    <HeadingCentered title={localizedData.introductionTitle} />
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-col lg:flex-row gap-12 lg:gap-16 items-start">
        <!-- Image on the left -->
        <div class="w-full lg:w-2/5 flex-shrink-0 lg:sticky lg:top-[82px]">
          <Image
            src={Assets.getImage(localizedData.introductionImage)}
            alt={Contact.langDependent(lang).name}
            class="w-full rounded shadow-[0_4px_16px_rgba(0,0,0,0.08)] object-cover aspect-[3/4]"
            loading="lazy"
            decoding="async"
          />
        </div>

        <!-- Intro text on the right -->
        <Prose
          class="prose w-full lg:w-3/5 space-y-7 font-neo-grotesque text-charcoal"
          content={localizedData.introduction}
        />
      </div>
      <div class="mt-16 text-center">
        <a
          href={p("about")}
          class="inline-block px-8 py-4 bg-navy text-cream font-system-ui text-base tracking-wide uppercase border-2 border-navy hover:bg-transparent hover:text-navy transition-colors duration-700"
        >
          {localizedData.introductionLinkText}
        </a>
      </div>
    </div>
  </div>
</section>
