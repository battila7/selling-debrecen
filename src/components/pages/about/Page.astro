---
import { PageLayout } from "../../../layouts";
import { Picture } from "astro:assets";
import {
  HeadingCentered,
  HeadingLeftAligned,
  Prose,
  Contact,
} from "../../common";

import { useI18n } from "../../../i18n/framework";
import data from "../../../content/fixed-pages/about.json";
import Assets from "../../../util/assets";
import { icons } from "@lucide/astro";
import ContactInformation from "../../../util/contact";

const { lang } = useI18n(Astro);
const localizedData = data[lang as keyof typeof data];

localizedData.valuesItems.forEach((item) => {
  item.IconSvg = icons[item.icon as keyof typeof icons];
});
---

<PageLayout
  title={localizedData.pageTitle}
  description={localizedData.pageDescription}
>
  <!-- Hero Section -->
  <section
    class="relative h-[32rem] md:h-[28rem] lg:h-[32rem] w-full overflow-hidden"
  >
    <div class="absolute inset-0 z-0">
      <Picture
        src={Assets.getImage(localizedData.titleImage)}
        alt=""
        formats={["webp"]}
        class="w-full h-full object-cover"
        widths={[400, 800, 1200, 1600, 2000]}
        sizes="100vw"
      />
      <div class="absolute inset-0 bg-navy/80 backdrop-blur-[0px]"></div>
    </div>

    <div class="relative z-10 container mx-auto px-6 lg:px-12 h-full">
      <div class="flex flex-col items-center justify-center h-full gap-8">
        <hgroup class="text-center">
          <h1
            class="font-didone text-3xl md:text-4xl lg:text-5xl text-white tracking-wide mb-3 uppercase"
          >
            {localizedData.title}
          </h1>
          <p class="text-white/90 text-base md:text-lg">
            {localizedData.subtitle}
          </p>
        </hgroup>
      </div>
    </div>
  </section>

  <!-- Our Story Section -->
  <section class="py-20 bg-cream-soft border-t border-taupe/20">
    <div class="container mx-auto px-6 lg:px-12">
      <div class="max-w-4xl mx-auto">
        <HeadingCentered title={localizedData.storyTitle} />
        <Prose
          class="prose-xl text-charcoal max-w-none space-y-6"
          content={localizedData.storyDescription}
        />
      </div>
    </div>
  </section>

  <!-- Our Values Section -->
  <section class="py-20 bg-cream border-t border-taupe/20">
    <div class="container mx-auto px-6 lg:px-12">
      <div class="max-w-6xl mx-auto">
        <HeadingLeftAligned
          title={localizedData.valuesTitle}
          subtitle={localizedData.valuesSubtitle}
          description={localizedData.valuesDescription}
          titleColor="text-navy"
          descriptionColor="text-charcoal"
        />
        <div class="grid md:grid-cols-2 gap-8">
          {
            localizedData.valuesItems.map(({ title, description, IconSvg }) => (
              <div class="bg-cream-soft p-8 border border-taupe/20 group hover:border-camel/40 transition-colors duration-300">
                <div class="flex items-center justify-center w-16 h-16 bg-navy/5 mb-6">
                  <IconSvg
                    class="w-8 h-8 text-navy"
                    stroke-width="1.5"
                    aria-hidden="true"
                  />
                </div>
                <h3 class="font-old-style text-2xl text-navy mb-4">{title}</h3>
                <p class="text-charcoal-dark leading-relaxed">{description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Why Debrecen Section -->
  <section class="py-20 bg-cream-soft border-t border-taupe/20">
    <div class="container mx-auto px-6 lg:px-12">
      <div class="max-w-4xl mx-auto">
        <HeadingLeftAligned
          title={localizedData.whyDebrecenTitle}
          subtitle={localizedData.whyDebrecenSubtitle}
          description={localizedData.whyDebrecenDescription}
          titleColor="text-navy"
          descriptionColor="text-charcoal"
        />
        <Prose
          class="prose prose-lg max-w-none space-y-6"
          content={localizedData.whyDebrecen}
        />
      </div>
    </div>
  </section>

  <!-- Meet the Agent Section -->
  <section class="py-20 bg-cream border-t border-taupe/20">
    <div class="container mx-auto px-6 lg:px-12">
      <div class="max-w-5xl mx-auto">
        <HeadingCentered title={localizedData.introductionTitle} />
        <div
          class="flex flex-col lg:flex-row gap-12 items-center lg:items-start"
        >
          <div class="flex-shrink-0">
            <Picture
              src={Assets.getImage(localizedData.introductionImage)}
              alt={ContactInformation.langDependent(lang).name}
              formats={["webp"]}
              class="w-64 h-64 lg:w-80 lg:h-80 object-cover border-4 border-navy/10"
              widths={[256, 320, 512, 640]}
              sizes="(max-width: 1024px) 256px, 320px"
            />
          </div>
          <div class="flex-1">
            <h3 class="font-didone text-3xl text-navy mb-2">
              {ContactInformation.langDependent(lang).name}
            </h3>
            <div class="space-y-4 text-charcoal-dark leading-relaxed">
              <Prose
                class="prose prose-lg max-w-none space-y-6"
                content={localizedData.introduction}
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section with Parallax -->
  <section class="relative py-24 overflow-hidden" id="about-cta">
    <div class="absolute inset-0 z-0 parallax-container">
      <div class="parallax-bg">
        <Picture
          src={Assets.getImage(localizedData.workTogetherImage)}
          alt=""
          formats={["webp"]}
          class="w-full h-full object-cover"
          widths={[400, 800, 1200, 1600, 2000]}
          sizes="100vw"
        />
      </div>
      <div class="absolute inset-0 bg-navy/85 backdrop-blur-[0px]"></div>
    </div>

    <div class="relative z-10 container mx-auto px-6 lg:px-12">
      <div class="max-w-4xl mx-auto text-center">
        <h2
          class="font-didone text-4xl md:text-5xl text-cream mb-6 tracking-wide"
        >
          {localizedData.workTogetherTitle}
        </h2>
        <div class="w-24 h-0.5 bg-camel mx-auto mb-8"></div>
        <p class="text-cream-soft text-lg leading-relaxed mb-12">
          {localizedData.workTogetherDescription}
        </p>
        <a
          href="#contact"
          class="hidden lg:inline-block px-6 py-3 border-2 border-white text-white font-system-ui text-sm tracking-wide uppercase hover:border-camel hover:bg-camel hover:text-navy transition-colors duration-300"
        >
          {localizedData.workTogetherButtonText}
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <Contact />
</PageLayout>

<style>
  .parallax-container {
    overflow: hidden;
  }

  .parallax-bg {
    position: absolute;
    inset: 0;
    height: 170%;
    top: -35%;
    will-change: transform;
  }
</style>

<script>
  const parallaxSection = document.getElementById("about-cta");
  const parallaxBg = parallaxSection?.querySelector(".parallax-bg");

  if (parallaxBg && parallaxSection) {
    const handleScroll = () => {
      const rect = parallaxSection.getBoundingClientRect();
      const scrollProgress =
        (window.innerHeight - rect.top) / (window.innerHeight + rect.height);

      if (scrollProgress >= 0 && scrollProgress <= 1) {
        const translateY = scrollProgress * 70 - 35;
        (parallaxBg as HTMLElement).style.transform =
          `translateY(${translateY}%)`;
      }
    };

    window.addEventListener("scroll", handleScroll, { passive: true });
    handleScroll();
  }
</script>
