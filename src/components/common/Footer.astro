---
import MapPin from "@lucide/astro/icons/map-pin";
import Mail from "@lucide/astro/icons/mail";
import Phone from "@lucide/astro/icons/phone";
import Facebook from "../../images/brands/facebook.svg";
import Instagram from "../../images/brands/instagram.svg";
import Tiktok from "../../images/brands/tiktok.svg";
import Logo from "../../images/selling-debrecen-logo.svg";
import Links from "../../util/links";

// TODO: Update these with actual contact information
const officeAddress = "Debrecen, Magyarország";
const email = "info@sellingdebrecen.hu";
const phone = "+36 XX XXX XXXX";

// TODO: Update with actual social media URLs
const socialLinks = {
  facebook: "https://facebook.com/sellingdebrecen",
  instagram: "https://instagram.com/sellingdebrecen",
  tiktok: "https://tiktok.com/@sellingdebrecen",
};

const navigationLinks = [
  { href: Links.HOME, label: "Főoldal" },
  { href: Links.PROPERTIES, label: "Ingatlanjaink" },
  { href: Links.FOR_SELLERS, label: "Kínálóknak" },
  { href: Links.FOR_BUYERS, label: "Keresőknek" },
  { href: Links.ABOUT, label: "Rólunk" },
  { href: Links.SCHEDULE, label: "Időpontfoglalás" },
];

const legalLinks = [
  { href: "/adatkezelesi-tajekoztato", label: "Adatkezelési tájékoztató" },
  { href: "/altalanos-szerzodesi-feltetelek", label: "ÁSZF" },
  { href: "/impresszum", label: "Impresszum" },
];
---

<footer class="bg-cream border-t border-taupe/20 py-12 md:py-16">
  <div class="container mx-auto px-4">
    <!-- Logo Section -->
    <div class="mb-12 pb-8 border-b border-taupe/20">
      <a
        href={Links.HOME}
        class="inline-block hover:opacity-80 transition-opacity"
        aria-label="Selling Debrecen - Főoldal"
      >
        <Logo class="h-16 w-auto text-navy" aria-hidden="true" />
      </a>
      <p class="mt-4 text-charcoal/70 max-w-md leading-relaxed">
        Megbízható ingatlanközvetítés Debrecenben
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-12">
      <!-- Contact Info Column -->
      <div class="lg:col-span-1">
        <h3 class="font-old-style text-lg text-navy mb-6">Kapcsolat</h3>
        <ul class="space-y-5">
          <li>
            <a
              href={`tel:${phone.replace(/\s/g, "")}`}
              class="flex items-start gap-3"
            >
              <div class="flex-shrink-0">
                <div
                  class="flex items-center justify-center w-12 h-12 bg-camel/10"
                >
                  <Phone class="w-5 h-5 text-camel" aria-hidden="true" />
                </div>
              </div>
              <span class="text-charcoal mt-2.5">{phone}</span>
            </a>
          </li>
          <li>
            <a href={`mailto:${email}`} class="flex items-start gap-3">
              <div class="flex-shrink-0">
                <div
                  class="flex items-center justify-center w-12 h-12 bg-camel/10"
                >
                  <Mail class="w-5 h-5 text-camel" aria-hidden="true" />
                </div>
              </div>
              <span class="text-charcoal mt-2.5 break-all">{email}</span>
            </a>
          </li>
          <li>
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0">
                <div
                  class="flex items-center justify-center w-12 h-12 bg-camel/10"
                >
                  <MapPin class="w-5 h-5 text-camel" aria-hidden="true" />
                </div>
              </div>
              <address class="text-charcoal not-italic mt-2.5">
                {officeAddress}
              </address>
            </div>
          </li>
        </ul>
      </div>

      <!-- Navigation Links Column -->
      <div class="lg:col-span-1">
        <h3 class="font-old-style text-lg text-navy mb-6">Oldaltérkép</h3>
        <nav aria-label="Footer navigation">
          <ul class="space-y-3">
            {
              navigationLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-charcoal hover:text-navy transition-colors"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>

      <!-- Social Media Column -->
      <div class="lg:col-span-1">
        <h3 class="font-old-style text-lg text-navy mb-6">Közösségi média</h3>
        <ul class="flex gap-4">
          <li>
            <a
              href={socialLinks.facebook}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center w-12 h-12 bg-camel/10 hover:bg-camel/20 transition-colors"
              aria-label="Facebook"
            >
              <Facebook class="w-5 h-5 text-camel" aria-hidden="true" />
            </a>
          </li>
          <li>
            <a
              href={socialLinks.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center w-12 h-12 bg-camel/10 hover:bg-camel/20 transition-colors"
              aria-label="Instagram"
            >
              <Instagram class="w-5 h-5 text-camel" aria-hidden="true" />
            </a>
          </li>
          <li>
            <a
              href={socialLinks.tiktok}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center w-12 h-12 bg-camel/10 hover:bg-camel/20 transition-colors"
              aria-label="TikTok"
            >
              <Tiktok class="w-5 h-5 text-camel" aria-hidden="true" />
            </a>
          </li>
        </ul>
      </div>

      <!-- Legal Column -->
      <div class="lg:col-span-1">
        <h3 class="font-old-style text-lg text-navy mb-6">Jogi információk</h3>
        <nav aria-label="Legal information">
          <ul class="space-y-3">
            {
              legalLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-charcoal hover:text-navy transition-colors"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="mt-12 pt-8 border-t border-taupe/20 text-center text-sm text-charcoal/60"
    >
      <p>
        &copy; {new Date().getFullYear()} Selling Debrecen. Minden jog fenntartva.
      </p>
    </div>
  </div>
</footer>
