---
import { Image } from "astro:assets";
import MapPin from "@lucide/astro/icons/map-pin";
import Mail from "@lucide/astro/icons/mail";
import Phone from "@lucide/astro/icons/phone";
import Clock from "@lucide/astro/icons/clock";
import { useI18n } from "../../../i18n";
import Contact from "../../../util/contact";
import Assets from "../../../util/assets";

const { t, lang } = useI18n(Astro);

type Props = {
  class: string;
};

const { class: className, ...rest } = Astro.props;
---

<div
  class:list={[
    "order-2 lg:order-1 bg-white border border-taupe/20 p-10 flex flex-col",
    className,
  ]}
  {...rest}
>
  <!-- Profile Section -->
  <div class="flex items-center gap-6 pb-8 mb-8 border-b border-taupe/20">
    <div class="flex-shrink-0">
      <Image
        src={Assets.getImage(Contact.general.profileImage)}
        alt={`${Contact.langDependent(lang).name} - ${Contact.langDependent(lang).role}`}
        class="w-24 h-24 rounded-full object-cover border-2 border-camel/30 shadow-[0_2px_8px_rgba(0,0,0,0.08)]"
        loading="eager"
        decoding="async"
      />
    </div>
    <div class="flex-1">
      <h3 class="font-didone text-2xl text-navy mb-1">
        {Contact.langDependent(lang).name}
      </h3>
      <p class="text-camel font-old-style mb-2">
        {Contact.langDependent(lang).role}
      </p>
      <p class="text-charcoal/70 text-sm leading-relaxed">
        {Contact.langDependent(lang).description}
      </p>
    </div>
  </div>

  <div class="flex-1">
    <h3 class="font-old-style text-2xl font-medium mb-8 text-navy">
      {t("contact.contact-information")}
    </h3>

    <div class="space-y-8">
      <!-- Office Address -->
      <div class="flex gap-5">
        <div class="flex-shrink-0">
          <div class="flex items-center justify-center w-16 h-16 bg-camel/10">
            <MapPin class="w-8 h-8 text-camel" aria-hidden="true" />
          </div>
        </div>
        <div class="flex-1">
          <h4 class="font-semibold text-charcoal mb-2">
            {t("contact.office")}
          </h4>
          <address class="text-charcoal/70 not-italic leading-relaxed">
            {Contact.general.office}
          </address>
        </div>
      </div>

      <!-- Email -->
      <div class="flex gap-5">
        <div class="flex-shrink-0">
          <div class="flex items-center justify-center w-16 h-16 bg-camel/10">
            <Mail class="w-8 h-8 text-camel" aria-hidden="true" />
          </div>
        </div>
        <div class="flex-1">
          <h4 class="font-semibold text-charcoal mb-2">{t("contact.email")}</h4>
          <a
            href={`mailto:${Contact.general.email}`}
            class="text-navy hover:text-camel transition-colors underline decoration-1 underline-offset-2"
          >
            {Contact.general.email}
          </a>
        </div>
      </div>

      <!-- Phone -->
      <div class="flex gap-5">
        <div class="flex-shrink-0">
          <div class="flex items-center justify-center w-16 h-16 bg-camel/10">
            <Phone class="w-8 h-8 text-camel" aria-hidden="true" />
          </div>
        </div>
        <div class="flex-1">
          <h4 class="font-semibold text-charcoal mb-2">{t("contact.phone")}</h4>
          <a
            href={`tel:${Contact.general.phone.replace(/\s/g, "")}`}
            class="text-navy hover:text-camel transition-colors underline decoration-1 underline-offset-2"
          >
            {Contact.general.phone}
          </a>
        </div>
      </div>

      <!-- Office Hours -->
      <div class="flex gap-5">
        <div class="flex-shrink-0">
          <div class="flex items-center justify-center w-16 h-16 bg-camel/10">
            <Clock class="w-8 h-8 text-camel" aria-hidden="true" />
          </div>
        </div>
        <div class="flex-1">
          <h4 class="font-semibold text-charcoal mb-2">
            {t("contact.office-hours")}
          </h4>
          <div class="text-charcoal/70 leading-relaxed space-y-1">
            {
              Contact.langDependent(lang).officeHoursItems.map((item) => (
                <p>{item}</p>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
