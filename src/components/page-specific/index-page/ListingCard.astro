---
export interface Listing {
  title: string;
  address: string;
  price: string;
  image?: string;
  imageAlt?: string;
  link?: string;
  rooms?: number;
  area?: number;
  propertyType?: string;
}

interface Props {
  listing: Listing;
}

const { listing } = Astro.props;
---

<a href={listing.link ?? "#"} class="block group">
  <article class="relative rounded-lg overflow-hidden aspect-[4/3]">
    {
      listing.image && (
        <img
          src={listing.image}
          alt={listing.imageAlt ?? listing.title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        />
      )
    }
    <div
      class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/40 to-transparent"
    >
    </div>

    <!-- Sliding content container -->
    <div
      class="absolute bottom-0 left-0 right-0 p-6 text-white transition-transform duration-300 lg:group-hover:-translate-y-4"
    >
      <p class="text-gray-200 mb-2">{listing.address}</p>
      <p class="text-2xl font-bold">{listing.price}</p>

      <!-- Additional details - visible on mobile/tablet, appear on hover on desktop -->
      <div
        class="mt-3 pt-3 border-t border-white/30 opacity-100 lg:opacity-0 lg:group-hover:opacity-100 transition-opacity duration-300"
      >
        <div class="flex gap-4 text-sm">
          {
            listing.rooms && (
              <span class="flex items-center gap-1">
                <span class="font-semibold">{listing.rooms}</span>
                <span class="text-gray-200">szoba</span>
              </span>
            )
          }
          {
            listing.area && (
              <span class="flex items-center gap-1">
                <span class="font-semibold">{listing.area}</span>
                <span class="text-gray-200">mÂ²</span>
              </span>
            )
          }
          {
            listing.propertyType && (
              <span class="text-gray-200">{listing.propertyType}</span>
            )
          }
        </div>
      </div>
    </div>
  </article>
</a>
