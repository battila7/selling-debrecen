---
export interface Listing {
  title: string;
  address: string;
  price: string;
  image?: string;
  imageAlt?: string;
  link?: string;
  rooms?: number;
  area?: number;
  propertyType?: string;
}

interface Props {
  listing: Listing;
}

const { listing } = Astro.props;
---

<a href={listing.link ?? "#"} class="block group">
  <article
    class="relative overflow-hidden aspect-[4/3] transition-all duration-1000"
  >
    {
      listing.image && (
        <img
          src={listing.image}
          alt={listing.imageAlt ?? listing.title}
          class="w-full h-full object-cover transition-transform duration-1000 ease-out group-hover:scale-105"
        />
      )
    }
    <div
      class="absolute inset-0 bg-gradient-to-t from-navy/90 via-navy/50 to-transparent"
    >
    </div>

    <!-- Sliding content container -->
    <div
      class="absolute bottom-0 left-0 right-0 p-6 text-cream transition-transform duration-800 ease-out lg:translate-y-6 lg:group-hover:-translate-y-4"
    >
      <h3 class="font-didone text-3xl mb-2 tracking-wide">
        {listing.title}
      </h3>
      <p
        class="font-geometric-humanist text-sm text-cream-soft/90 mb-3 tracking-wider uppercase font-semibold"
      >
        {listing.address}
      </p>
      <p class="font-old-style text-2xl text-camel font-medium tracking-wide">
        {listing.price}
      </p>

      <!-- Additional details - visible on mobile/tablet, appear on hover on desktop -->
      <div
        class="mt-2 pt-2 border-t border-camel/40 opacity-100 lg:opacity-0 lg:group-hover:opacity-100 transition-all duration-500 lg:translate-y-4 lg:group-hover:translate-y-0"
      >
        <div
          class="flex gap-4 font-geometric-humanist text-sm text-cream-soft/90"
        >
          {
            listing.propertyType && (
              <span class="tracking-wide">{listing.propertyType}</span>
            )
          }
          {
            listing.rooms && (
              <span class="flex items-center gap-1">
                <span class="font-semibold">{listing.rooms}</span>
                <span>szoba</span>
              </span>
            )
          }
          {
            listing.area && (
              <span class="flex items-center gap-1">
                <span class="font-semibold">{listing.area}</span>
                <span>mÂ²</span>
              </span>
            )
          }
        </div>
      </div>
    </div>
  </article>
</a>
