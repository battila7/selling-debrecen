const featuredListings: Listing[] = [
  {
    title: "Elegáns családi ház",
    address: "Debrecen, Belváros",
    price: "125.000.000 Ft",
    image: listingPlaceholder.src,
    rooms: 5,
    area: 180,
    propertyType: "Családi ház",
  },
  {
    title: "Modern lakás",
    address: "Debrecen, Egyetem tér",
    price: "45.000.000 Ft",
    image: listingPlaceholder.src,
    rooms: 2,
    area: 65,
    propertyType: "Lakás",
  },
  {
    title: "Prémium villa",
    address: "Debrecen, Nagyerdő",
    price: "280.000.000 Ft",
    image: listingPlaceholder.src,
    rooms: 7,
    area: 320,
    propertyType: "Villa",
  },
  {
    title: "Tégla családi ház",
    address: "Debrecen, Tócóskert",
    price: "95.000.000 Ft",
    image: listingPlaceholder.src,
    rooms: 4,
    area: 140,
    propertyType: "Családi ház",
  },
  {
    title: "Panorámás lakás",
    address: "Debrecen, Doberdó utca",
    price: "52.000.000 Ft",
    image: listingPlaceholder.src,
    rooms: 3,
    area: 85,
    propertyType: "Lakás",
  },
  {
    title: "Kertesház",
    address: "Debrecen, Széchenyi utca",
    price: "78.000.000 Ft",
    image: listingPlaceholder.src,
    rooms: 4,
    area: 120,
    propertyType: "Családi ház",
  },
];
---

<section class="py-20 bg-cream-soft">
  <div class="container mx-auto px-4 max-w-8xl">
    <div class="mb-10">
      <p
        class="font-geometric-humanist text-base font-semibold text-camel uppercase tracking-wider mb-4"
      >
        A Selling Debrecen ajánlata
      </p>
      <h2 class="font-didone text-5xl md:text-6xl text-navy mb-4 tracking-wide">
        Kiemelt ingatlanjaink
      </h2>
      <div class="w-24 h-0.5 bg-camel mt-5 mb-5"></div>
      <p class="text-charcoal text-xl max-w-3xl leading-relaxed">
        Fedezze fel válogatott ingatlanjaink különleges kínálatát. Minden
        ingatlan gondosan kiválasztott, hogy az Ön igényeinek megfelelő otthont
        találhassa meg Debrecenben.
      </p>
    </div>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-10 lg:gap-x-12 gap-y-8 lg:gap-y-10"
    >
      {featuredListings.map((listing) => <ListingCard listing={listing} />)}
    </div>
    <div class="mt-16 text-center">
      <a
        href={Links.PROPERTIES}
        class="inline-block px-8 py-4 bg-navy text-cream font-system-ui text-base tracking-wide uppercase border-2 border-navy hover:bg-transparent hover:text-navy transition-colors duration-700"
      >
        Összes ingatlan megtekintése
      </a>
    </div>
  </div>
</section>
