---
import TrendingUp from "@lucide/astro/icons/trending-up";
import Camera from "@lucide/astro/icons/camera";
import FileText from "@lucide/astro/icons/file-text";
import Handshake from "@lucide/astro/icons/handshake";
import Search from "@lucide/astro/icons/search";
import MapPin from "@lucide/astro/icons/map-pin";
import Shield from "@lucide/astro/icons/shield";
import Key from "@lucide/astro/icons/key";
import Links from "../../../util/links";
import type { AstroComponent } from "@lucide/astro";
import forSellersImage from "../../../images/for-sellers.jpg";
import forBuyersImage from "../../../images/for-buyers-02.jpg";

interface Service {
  title: string;
  description: string;
  icon: AstroComponent;
}

const sellerServices: Service[] = [
  {
    title: "Ingatlan értékelés",
    description:
      "Professzionális értékelés az optimális eladási ár meghatározásához",
    icon: TrendingUp,
  },
  {
    title: "Fotózás és marketing",
    description: "Professzionális fotózás és hatékony marketing stratégia",
    icon: Camera,
  },
  {
    title: "Ügyintézés",
    description: "Teljes körű ügyintézés a dokumentumoktól a szerződéskötésig",
    icon: FileText,
  },
  {
    title: "Érdeklődők kezelése",
    description: "Megbízható érdeklődők kiválasztása és megfelelő kommunikáció",
    icon: Handshake,
  },
];

const buyerServices: Service[] = [
  {
    title: "Ingatlan keresés",
    description: "Személyre szabott keresés az Ön igényei szerint",
    icon: Search,
  },
  {
    title: "Környék ismertetés",
    description: "Részletes információk a környékről és infrastruktúráról",
    icon: MapPin,
  },
  {
    title: "Biztonságos vásárlás",
    description: "Teljes körű ellenőrzés és jogi védelem a vásárlás során",
    icon: Shield,
  },
  {
    title: "Kulcs átadás",
    description: "Zökkenőmentes átadás-átvétel és bejelentkezési segítség",
    icon: Key,
  },
];
---

<section class="pt-20 bg-navy overflow-hidden">
  <div class="container mx-auto px-4 max-w-8xl">
    <!-- Section Header -->
    <div class="mb-20">
      <p
        class="font-geometric-humanist text-base font-semibold text-camel uppercase tracking-wider mb-4"
      >
        Átfogó szolgáltatások
      </p>
      <h2
        class="font-didone text-5xl md:text-6xl text-cream mb-4 tracking-wide"
      >
        Amit kínálunk
      </h2>
      <div class="w-24 h-0.5 bg-camel mt-5 mb-5"></div>
      <p class="text-cream-soft text-xl max-w-3xl leading-relaxed">
        Professzionális megoldásokkal támogatjuk Önt az ingatlanügyletek során.
      </p>
    </div>
  </div>

  <!-- Services for Sellers -->
  <div class="relative left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] w-screen">
    <div class="flex flex-col lg:flex-row">
      <!-- Full-width Background Image Column extending to left edge -->
      <div class="lg:w-5/12 relative min-h-[500px] lg:min-h-[700px]">
        <div
          class="absolute inset-0 bg-cover bg-center"
          style={`background-image: url(${forSellersImage.src});`}
        >
          <div class="absolute inset-0 bg-navy/75"></div>
        </div>
        <div class="relative h-full flex items-center justify-end">
          <div class="w-full lg:max-w-xl px-4 lg:pr-12 xl:pr-16">
            <div class="lg:sticky lg:top-24 py-16">
              <h3
                class="font-old-style text-4xl md:text-5xl text-cream mb-6 tracking-wide"
              >
                Eladóknak és bérbeadóknak
              </h3>
              <div class="w-16 h-0.5 bg-white mb-6"></div>
              <p class="text-cream-soft text-lg leading-relaxed mb-8">
                Ha ingatlanját szeretné értékesíteni, szakértő segítségünkkel a
                lehető legjobb áron és a legrövidebb idő alatt adhatja el.
                Teljes körű szolgáltatást nyújtunk az értékeléstől a
                szerződéskötésig.
              </p>
              <a
                href={Links.FOR_SELLERS}
                class="inline-block px-6 py-3 border-2 border-white text-white font-system-ui text-sm tracking-wide uppercase hover:border-camel hover:bg-camel hover:text-navy transition-colors duration-300"
              >
                Eladni, kiadni szeretnék
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Services Grid -->
      <div
        class="lg:w-7/12 bg-navy flex items-center py-16 px-4 lg:pl-12 xl:pl-16"
      >
        <div class="w-full max-w-4xl mx-auto lg:mx-0">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
            {
              sellerServices.map((service) => {
                const Icon = service.icon;
                return (
                  <div class="bg-navy-light border border-taupe/20 p-8">
                    <div class="flex items-center justify-center w-16 h-16 bg-camel/10 mb-6">
                      <Icon class="w-8 h-8 text-camel" aria-hidden="true" />
                    </div>
                    <h4 class="font-old-style text-2xl text-cream mb-3">
                      {service.title}
                    </h4>
                    <p class="text-cream-soft leading-relaxed">
                      {service.description}
                    </p>
                  </div>
                );
              })
            }
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Services for Buyers -->
  <div class="relative left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] w-screen">
    <div class="flex flex-col lg:flex-row">
      <!-- Full-width Background Image Column extending to left edge -->
      <div class="lg:w-5/12 relative min-h-[500px] lg:min-h-[700px]">
        <div
          class="absolute inset-0 bg-cover bg-center"
          style={`background-image: url(${forBuyersImage.src});`}
        >
          <div class="absolute inset-0 bg-navy/75"></div>
        </div>
        <div class="relative h-full flex items-center justify-end">
          <div class="w-full lg:max-w-xl px-4 lg:pr-12 xl:pr-16">
            <div class="lg:sticky lg:top-24 py-16">
              <h3
                class="font-old-style text-4xl md:text-5xl text-cream mb-6 tracking-wide"
              >
                Keresőknek
              </h3>
              <div class="w-16 h-0.5 bg-white mb-6"></div>
              <p class="text-cream-soft text-lg leading-relaxed mb-8">
                Álmaik otthonának megtalálásában segítünk. Széles
                választékunkból választhatnak, és minden lépésben mellettük
                állunk a vásárlás folyamatában.
              </p>
              <a
                href={Links.FOR_BUYERS}
                class="inline-block px-6 py-3 border-2 border-white text-white font-system-ui text-sm tracking-wide uppercase hover:border-camel hover:bg-camel hover:text-navy transition-colors duration-300"
              >
                Ingatlant keresek
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Services Grid -->
      <div
        class="lg:w-7/12 bg-navy flex items-center py-16 px-4 lg:pl-12 xl:pl-16"
      >
        <div class="w-full max-w-4xl mx-auto lg:mx-0">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
            {
              buyerServices.map((service) => {
                const Icon = service.icon;
                return (
                  <div class="bg-navy-light border border-taupe/20 p-8">
                    <div class="flex items-center justify-center w-16 h-16 bg-camel/10 mb-6">
                      <Icon class="w-8 h-8 text-camel" aria-hidden="true" />
                    </div>
                    <h4 class="font-old-style text-2xl text-cream mb-3">
                      {service.title}
                    </h4>
                    <p class="text-cream-soft leading-relaxed">
                      {service.description}
                    </p>
                  </div>
                );
              })
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
